<div class="jeopardy-home container mt-5">
  <div class="text-center mb-4">
    <h1 class="display-4">Welcome to Rails Jeopardy!</h1>
    <p class="lead">Test your knowledge with our Jeopardy-style quiz game made with Rails.</p>
  </div>

  <div class="alert alert-info justify-content-center" role="alert">
    We have <%= @total_clues %> clues across <%= @categories %> categories.
  </div>

  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= form_with(url: games_path, local: true, class: "card p-4 shadow") do |f| %>
        <div class="form-group">
          <%= f.label :player_name, "Player Name", class: "form-label" %>
          <%= f.text_field :player_name, required: true, class: "form-control" %>
        </div>

        <div class="form-group mt-4">
          <%= f.select :bot_difficulty, options_for_select(["Easy", "Medium", "Hard"]), { prompt: "Select Bot Difficulty" }, { class: "form-select" } %>
        </div>

        <div class="mt-4 d-flex justify-content-center">
          <%= f.submit "New Game", class: "btn btn-primary btn-lg" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
